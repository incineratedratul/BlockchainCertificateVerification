<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Certificates - Verifi-chain</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/mycertificates.css" />
  </head>
  <body>
    <%- include('../partials/header') %>
    <div class="dashboard-container">
      <aside class="sidebar">
        <nav>
          <ul>
            <li>
              <a href="/dashboard"><i class="fas fa-home"></i> Dashboard</a>
            </li>
            <li class="active">
              <a href="/certificates"
                ><i class="fas fa-certificate"></i> My Certificates</a
              >
            </li>
            <li>
              <a href="/upload"
                ><i class="fas fa-upload"></i> Upload Certificate</a
              >
            </li>
            <li>
              <a href="/profile"><i class="fas fa-user"></i> Profile</a>
            </li>
            <li>
              <a href="/settings"><i class="fas fa-cog"></i> Settings</a>
            </li>
          </ul>
        </nav>
      </aside>
      <main class="main-content">
        <header class="page-header">
          <h1>My Certificates</h1>
          <div class="actions">
            <button class="btn-primary">
              <i class="fas fa-plus"></i> Add New Certificate
            </button>
            <button class="btn-secondary">
              <i class="fas fa-download"></i> Export All
            </button>
          </div>
        </header>
        <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-error">
          <i class="fas fa-exclamation-circle"></i>
          <%= error %>
        </div>
        <% } %>
        <div class="table-container">
          <table class="certificates-table">
            <thead>
              <tr>
                <th>Certificate ID</th>
                <th>Full Name</th>
                <th>Certificate Name</th>
                <th>Institute</th>
                <th>Certificate Type</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% certificates.forEach(certificate => { %>
              <tr>
                <td><%= certificate['Certificate ID'] %></td>
                <td><%= certificate['Full Name'] %></td>
                <td><%= certificate['Certificate Name'] %></td>
                <td><%= certificate.Institute %></td>
                <td><%= certificate['Certificate Type'] %></td>
                <td class="actions-cell">
                  <a
                    href="/uploads/<%= certificate.Filename %>"
                    download
                    class="btn-icon"
                    title="Download"
                  >
                    <i class="fas fa-download"></i>
                  </a>
                  <button class="btn-icon" title="View Details">
                    <i class="fas fa-eye"></i>
                  </button>
                  <button class="btn-icon" title="Share">
                    <i class="fas fa-share-alt"></i>
                  </button>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </main>
    </div>
    <%- include('../partials/footer') %>
  </body>
</html>
